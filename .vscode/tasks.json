{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Site",
            "type": "shell",
            "command": "${command:python.interpreterPath} build_site.py",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Launch Preview",
            "type": "shell",
            "command": "FLASK_APP=tools/serve.py ${command:python.interpreterPath} -m flask run -p 8080 --cert=adhoc",
            "isBackground": true,
            "problemMatcher": {
                "owner": "flask",
                "pattern": [
                    {
                        "regexp": "Running on https?://127.0.0.1:([0-9]+)",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": { "activeOnStart": true, "beginsPattern": "Serving Flask app", "endsPattern": "Running on" }
            }
        },
        {
            "label": "Build and Launch Preview",
            "dependsOn": [
                "Build Site",
                "Launch Preview"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": []
}